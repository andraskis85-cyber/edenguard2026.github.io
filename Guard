<script>
    const categories = [
        "√âVEL≈êK", "FUT√ì N√ñV√âNYEK", "KONT√âNERES GY√úM√ñLCSF√ÅK", "KONT√âNERES SZ≈êL≈êK", 
        "M≈∞TR√ÅGY√ÅK & T√ÅPOLDATOK", "SZIKLAKERTI N√ñV√âNYEK", "BAMBUSZOK", "BOGY√ìS GY√úM√ñLCS√ñK", 
        "K√úL√ñNLEGES GY√úM√ñLCS√ñK", "√ñR√ñKZ√ñLD D√çSZCSERJ√âK", "D√çSZCSERJ√âK", "K√öSZ√ì N√ñV√âNYEK", 
        "LEANDEREK", "S√ñV√âNYN√ñV√âNYEK", "D√çSZF√ÅK", "D√çSZF√úVEK", "F≈∞SZERN√ñV√âNYEK", 
        "FENY≈êK & √ñR√ñKZ√ñLDEK", "F≈∞MAGOK", "MAGAS T√ñRZSRE OLTOTT N√ñV√âNYEK", 
        "P√ÅLINKAF≈êZ√âS KELL√âKEI", "SZ≈êL≈êK (SZABADGY√ñKER≈∞)", "GY√úM√ñLCSF√ÅK (SZABADGY√ñKER≈∞)", 
        "R√ìZS√ÅK", "VET≈êMAGOK", "KERTI SZERSZ√ÅMOK", "AJ√ÅND√âKUTALV√ÅNY", "TR√ìPUSI N√ñV√âNYEK", 
        "GOMBATERMESZT≈ê K√âSZLETEK"
    ];

    // K√©pek kateg√≥ri√°khoz
    const categoryImages = {
        "√âVEL≈êK": "images.unsplash.com",
        "M≈∞TR√ÅGY√ÅK & T√ÅPOLDATOK": "images.unsplash.com",
        "GY√úM√ñLCSF√ÅK (SZABADGY√ñKER≈∞)": "images.unsplash.com",
        "default": "images.unsplash.com"
    };

    let products = [];
    categories.forEach((cat, cIdx) => {
        for(let i = 1; i <= 10; i++) {
            products.push({
                id: cIdx * 10 + i,
                cat: cat,
                name: `${cat} - Pr√©mium #${i}`,
                price: Math.floor(Math.random() * (15000 - 990) + 990),
                img: categoryImages[cat] || categoryImages["default"]
            });
        }
    });

    function init() {
        const menu = document.getElementById('catMenu');
        categories.forEach(cat => {
            const a = document.createElement('a');
            a.className = 'cat-item';
            a.innerText = cat;
            a.href = "#";
            a.onclick = (e) => { e.preventDefault(); filter(cat); };
            menu.appendChild(a);
        });
        render(products.slice(0, 12));
    }

    function render(list) {
        const grid = document.getElementById('productGrid');
        grid.innerHTML = '';
        list.forEach(p => {
            grid.innerHTML += `
                <div class="p-card">
                    <img src="${p.img}" alt="${p.name}">
                    <div class="p-info">
                        <h4>${p.name}</h4>
                        <div class="p-price">${p.price.toLocaleString()} Ft</div>
                        <button class="btn-buy" onclick="add()">Kos√°rba</button>
                    </div>
                </div>
            `;
        });
    }

    function filter(cat) {
        document.getElementById('viewTitle').innerText = cat;
        render(products.filter(p => p.cat === cat));
    }

    let count = 0;
    function add() { document.getElementById('cartCount').innerText = ++count; }

    function search() {
        const val = document.getElementById('searchInput').value.toLowerCase();
        render(products.filter(p => p.name.toLowerCase().includes(val)));
    }

    init();
</script>

